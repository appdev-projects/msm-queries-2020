<h1>
  List of all actors
</h1>

<hr>

<h2>
  Add a new actor
</h2>

<form action="/insert_actor">
  <div>
    <label for="name_box">
      Name
    </label>

    <input type="text" id="name_box" name="query_name">
  </div>

  <div>
    <label for="dob_box">
      Dob
    </label>

    <input type="date" id="dob_box" name="query_dob">
  </div>

  <div>
    <label for="bio_box">
      Bio
    </label>

    <textarea id="bio_box" name="query_bio" rows="3"></textarea>
  </div>

  <div>
    <label for="image_box">
      Image
    </label>

    <input type="text" id="image_box" name="query_image">
  </div>

  <button>
    Create actor
  </button>
</form>

<hr>

<table>
  <tr>
    <th>
      ID
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
      Bio
    </th>

    <th>
      Image
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @actors.each do |actor| %>
  <tr>
    <td>
      <%= actor.id %>
    </td>

    <td>
      <%= actor.name %>
    </td>

    <td>
      <%= actor.dob %>
    </td>

    <td>
      <%= actor.bio %>
    </td>

    <td>
      <%= actor.image %>
    </td>

    <td>
      <%= time_ago_in_words(actor.created_at) %> ago
    </td>
    <td>
      <%= time_ago_in_words(actor.updated_at) %> ago
    </td>

    <td>
      <a href="/actors/<%= actor.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
